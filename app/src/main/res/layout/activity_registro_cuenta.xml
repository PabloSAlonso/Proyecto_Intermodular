<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".Views.RegistroCuenta">

    <EditText
        android:id="@+id/ettRMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/mensaje_poneremail"
        android:inputType="text"
        android:textColorHint="@color/dark_blue"
        app:layout_constraintBottom_toTopOf="@+id/ettRPass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvRmail"
        app:layout_constraintTop_toBottomOf="@+id/ettNick" />

    <EditText
        android:id="@+id/ettRPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/mensaje_password"
        android:inputType="text"
        android:textColorHint="@color/dark_blue"
        app:layout_constraintBottom_toTopOf="@+id/editTextText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvRPass"
        app:layout_constraintTop_toBottomOf="@+id/ettRMail" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRNombreCompleto"
        android:layout_width="113dp"
        android:layout_height="40dp"
        android:text="@string/mensaje_nomcompleto"
        android:textColor="@color/dark_blue"
        app:layout_constraintEnd_toStartOf="@+id/ettNom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <TextView
        android:id="@+id/tvRUserName"
        android:layout_width="126dp"
        android:layout_height="42dp"
        android:text="@string/mensaje_nombreusuario"
        android:textColor="@color/dark_blue"
        app:layout_constraintBottom_toTopOf="@+id/ettRMail"
        app:layout_constraintEnd_toStartOf="@+id/ettNick"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRNombreCompleto"
        app:layout_constraintVertical_bias="0.548" />

    <TextView
        android:id="@+id/tvRmail"
        android:layout_width="128dp"
        android:layout_height="26dp"
        android:text="@string/mensaje_registrarcorreo"
        android:textColor="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="@+id/ettRMail"
        app:layout_constraintEnd_toStartOf="@+id/ettRMail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ettRMail" />

    <TextView
        android:id="@+id/tvRPass"
        android:layout_width="87dp"
        android:layout_height="22dp"
        android:text="@string/mensaje_password"
        android:textColor="@color/dark_blue"
        app:layout_constraintBottom_toTopOf="@+id/tvRNacimiento"
        app:layout_constraintEnd_toStartOf="@+id/ettRPass"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ettRPass"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/tvRNacimiento"
        android:layout_width="104dp"
        android:layout_height="40dp"
        android:text="@string/mensaje_fechanac"
        android:textColor="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="@+id/editTextText"
        app:layout_constraintEnd_toStartOf="@+id/editTextText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextText" />

    <EditText
        android:id="@+id/ettNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/mensaje_nomcompleto"
        android:inputType="text"
        android:textColorHint="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="@+id/tvRNombreCompleto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvRNombreCompleto"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <EditText
        android:id="@+id/ettNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/mensaje_nombreusuario"
        android:inputType="text"
        android:textColorHint="@color/dark_blue"
        app:layout_constraintBottom_toTopOf="@+id/ettRMail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvRUserName"
        app:layout_constraintTop_toBottomOf="@+id/ettNom" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="00/00/0000"
        android:inputType="datetime|date"
        android:textColorHint="@color/dark_blue"
        app:layout_constraintBottom_toTopOf="@+id/btnRegistrarse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvRNacimiento"
        app:layout_constraintTop_toBottomOf="@+id/ettRPass" />

    <TextView
        android:id="@+id/tvInicioSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mensaje_registro"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mensaje_registrate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText" />
</androidx.constraintlayout.widget.ConstraintLayout>